1. Largest Element in an Array

from typing import List
class Solution:
    def largest(self, arr : List[int]) -> int:
        elm = 0
        for num in arr:
            if num>elm: 
                elm = num
        return elm


2. Second Largest Element in an Array without sorting

class Solution:
    def getSecondLargest(self, arr):
        lar = 0
        sec_lar = 0
        
        for num in arr:
            if num>lar:
                sec_lar = lar
                lar = num 
            elif num<lar and num>sec_lar:
                sec_lar = num 
        return sec_lar if sec_lar>0 else -1

3. Check if the array is sorted and rotated 

class Solution(object):
    def check(self, nums):
        size = len(nums)
        count = 0
        for i in range(size):
            if (nums[i]>(nums[(i+1) % size])):
                count +=1
        

        if count>1:
            return False
        else:
            return True

4. Remove Duplicates from Sorted Array

class Solution(object):
    def removeDuplicates(self, nums):
        slow = 0 
        for fast in range(1,len(nums)):
            if nums[fast]!=nums[slow]:
                slow = slow+1
                nums[slow]=nums[fast]
        return slow+1

5. 283. Move Zeroes

class Solution(object):
    def moveZeroes(self, nums):
        slow = 0 
        for fast in range(0, len(nums)):
            if nums[fast]!=0:
                nums[slow]=nums[fast]
                slow +=1

        for i in range(slow, len(nums)):
            nums[i]=0

        return nums

6. 268. Missing Number

with in 
# class Solution(object):
#     def missingNumber(self, nums):
#         for i in range(len(nums)+1):
#             if i not in nums:
#                 return i

without in 
class Solution(object):
    def missingNumber(self, nums):
        n = len(nums)
        expected_sum = n*(n+1)/2
        output_sum = sum(nums)
        return expected_sum - output_sum

7. 189. Rotate Array

class Solution(object):
    def rotate(self, nums, k):
        n = len(nums)
        k %= n 

        self.reverse(nums, 0 , n-1)
        self.reverse(nums, 0, k-1)
        self.reverse(nums, k, n-1)
        
        return nums


    def reverse(self, nums, start, end):
        while(start<end):
            nums[start], nums[end] = nums[end], nums[start]
            start +=1
            end -=1
        return nums 
        
        
8. 485. Max Consecutive Ones

class Solution(object):
    def findMaxConsecutiveOnes(self, nums):
        count = 0
        maxi = 0 
        for num in nums:
            if num == 1:
                count+=1
                maxi = max(count, maxi)
            else:
                count = 0

        return maxi

